class Rectangulo:
    def __init__(self):
        self.base = float(input("Ingrese la base del rectángulo: "))
        self.altura = float(input("Ingrese la altura del rectángulo: "))

    def calcular_area(self):
        return self.base * self.altura

    def calcular_perimetro(self):
        return 2 * (self.base + self.altura)

    def mostrar_detalles(self):
        print(f"Base: {self.base}")
        print(f"Altura: {self.altura}")
        print(f"Área: {self.calcular_area()}")
        print(f"Perímetro: {self.calcular_perimetro()}")

# Crear una instancia de Rectangulo y llamar al método mostrar_detalles
rectangulo = Rectangulo()
rectangulo.mostrar_detalles()